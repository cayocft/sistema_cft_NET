@model IEnumerable<sistema_cft.Models.Asignatura>

@{
    ViewData["Title"] = "Lista de Asignaturas";
}

<h1>Lista de Asignaturas</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                Descripción
            </th>
            <th>
                Código
            </th>
            <th>
                Fecha de Actualización
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaActualizacion)
            </td>
            <td>
                <a class="btn btn-success"asp-action="Edit" asp-route-id="@item.Id">Actualizar</a> |
                <a class="btn btn-light" asp-action="Details" asp-route-id="@item.Id">Ver</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
